# 1inch Fusion+ Cosmos Extension Environment Configuration
# Copy this file to .env and fill in your values

# ===== GENERAL CONFIGURATION =====
NODE_ENV=development  # development, production, testing
LOG_LEVEL=info       # debug, info, warn, error
PORT=3000

# ===== ETHEREUM CONFIGURATION =====
ETHEREUM_RPC_URL=http://localhost:8545
# Additional RPC endpoints for failover and load balancing (comma-separated)
ETHEREUM_BACKUP_RPC_URLS=https://mainnet.infura.io/v3/YOUR_KEY,https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETHEREUM_CHAIN_ID=1337
ETHEREUM_PRIVATE_KEY=0x...
ETHEREUM_HTLC_CONTRACT=0x...
ETHEREUM_RESOLVER_CONTRACT=0x...
ETHEREUM_CONFIRMATIONS=12
ETHEREUM_GAS_LIMIT=500000
ETHEREUM_GAS_PRICE=20000000000

# ===== COSMOS CONFIGURATION =====
COSMOS_RPC_URL=http://localhost:26657
# Additional RPC endpoints for failover and load balancing (comma-separated)
COSMOS_BACKUP_RPC_URLS=https://rpc.osmosis.zone,https://osmosis-rpc.polkachu.com
COSMOS_REST_URL=http://localhost:1317
COSMOS_CHAIN_ID=osmosis-1
COSMOS_MNEMONIC="your mnemonic phrase here..."
COSMOS_HTLC_CONTRACT=osmo1...
COSMOS_GAS_PRICE=0.025uosmo
COSMOS_GAS_LIMIT=200000
COSMOS_DENOM=uosmo
COSMOS_ADDRESS_PREFIX=osmo

# ===== CONNECTION POOL CONFIGURATION =====
# Maximum connections per endpoint
POOL_MAX_CONNECTIONS=20
# Minimum connections to maintain (pre-warmed)
POOL_MIN_CONNECTIONS=5
# Connection timeout in milliseconds
POOL_CONNECTION_TIMEOUT=30000
# Idle connection timeout in milliseconds
POOL_IDLE_TIMEOUT=300000
# Health check interval in milliseconds
POOL_HEALTH_CHECK_INTERVAL=30000
# Circuit breaker error threshold
POOL_CIRCUIT_BREAKER_THRESHOLD=10
# Circuit breaker timeout in milliseconds
POOL_CIRCUIT_BREAKER_TIMEOUT=120000
# Request retry attempts
POOL_MAX_RETRIES=3
# Retry delay in milliseconds
POOL_RETRY_DELAY=1000

# ===== CHAIN ADDRESSES (Production) =====
# These are filled in from chain registry or manual configuration
OSMOSIS_ROUTER_ADDRESS=osmo1...
COSMOS_ROUTER_ADDRESS=cosmos1...
JUNO_ROUTER_ADDRESS=juno1...

# ===== IBC CHANNELS (Production) =====
# These are discovered from chain registry or set manually
OSMOSIS_COSMOS_CHANNEL=channel-141
OSMOSIS_JUNO_CHANNEL=channel-42
COSMOS_OSMOSIS_CHANNEL=channel-141
JUNO_OSMOSIS_CHANNEL=channel-0

# ===== CHAIN REGISTRY =====
CHAIN_REGISTRY_URL=https://registry.ping.pub
CHAIN_REGISTRY_CACHE_TIMEOUT=3600
CHAIN_REGISTRY_REFRESH_INTERVAL=300

# ===== RELAYER CONFIGURATION =====
RELAY_MAX_RETRIES=3
RELAY_RETRY_DELAY=5000
RELAY_BATCH_SIZE=10
RELAY_PROCESSING_INTERVAL=10000
RELAY_TIMEOUT_BUFFER=3600

# ===== RECOVERY CONFIGURATION =====
RECOVERY_ENABLED=true
RECOVERY_CHECK_INTERVAL=60000
RECOVERY_REFUND_BUFFER=7200

# ===== MONITORING =====
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000
SHUTDOWN_TIMEOUT=30000

# ===== SECURITY (Production) =====
MAX_REQUESTS_PER_MINUTE=60
MAX_SWAPS_PER_HOUR=100
EMERGENCY_PAUSE_ENABLED=true

# ===== DEVELOPMENT OVERRIDES =====
# Uncomment for development/testing
# DEV_FAST_TIMELOCK=true
# DEV_SMALL_AMOUNTS=true
# DEV_SKIP_VALIDATIONS=false